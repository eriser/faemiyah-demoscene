	add	ebp, var_multiuse_safe - var_multiuse
	mov	ecx, 3
.looppi:
	push	ecx
	push	dword 1
	call	func_rand_f
	fimul	dword [var_timer]
	fdiv	dword [num_rand_rotate_div]
	pop	eax
	pop	ecx
	fstp	dword [ebp + ecx * 4 - 4]
	loop	.looppi
	call	func_glRotate3f
	sub	ebp, var_multiuse_safe - var_multiuse
	ret


