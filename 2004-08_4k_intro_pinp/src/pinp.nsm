; Interpolaattori ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

; Lataa 3 arvoa edi:ssä passatusta osoitteesta (short) ja liu-uttaa niitä
; kohti arvoja, jotka löytyvät ks. osoitteen perästä.
; Liu-utus esi:ssä passattujen aika-arvojen mukaan (short).
; Täten intron maksimipituus on hyvin rajoitettu, vitunkos väliä!
; Interpoloidut arvot menevät osoitteeseen ebp.
; Tuhoaa ecx:n

func_interpolate:
	fild	dword [esi + 0]
	fild	dword [var_timer]
	fsub	st1
	fild	dword [esi + 4]
	fsub	st2
	fdivp	st1, st0
; Kolmelle muuttujalle
	mov	ecx, 3
.loop:
	fild	word [edi + ecx * 2 - 2]
	fild	word [edi + ecx * 2 - 2 + 6]
	fsub	st1
	fmul	st2
	faddp	st1
	fstp	dword [ebp + ecx * 4 - 4]
	loop	.loop
.loppu:
	fstp	st0
	fstp	st0
	ret

