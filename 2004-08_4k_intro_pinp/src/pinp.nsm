func_feed_model:
	push	dword GL_TRIANGLE_STRIP
	call	glBegin
	movsx	ecx, byte [edi]
	inc	edi

.looppi:
	push	ecx
	movsx	eax, byte [edi + 3]
	push	eax
	call	func_glColor1i

	mov	ecx, 3
.getloop:
	movsx	eax, byte [edi + ecx - 1]
	push	eax
	loop	.getloop
	call	func_feed_cordinate

	add	esp, 4 * 4
	add	edi, 4
	pop	ecx
	loop	.looppi

	call	glEnd
	pop	eax
	ret

