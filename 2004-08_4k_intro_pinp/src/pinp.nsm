vowel:
	;; ensin sarja
	test bl, 0x80
	jz .long

	push esi
	push edx

	;; kohinakonsonanttii
	xor edx, edx
	and bl, 0x7f 		; 0-3 freq, 4-6 vol

	%ifdef AUTOMAKE
	mov esi, main		; täältä noiset
	%else
	mov esi, _start		; täältä noiset
	%endif
	
	shr ecx, 2
	
	.noiseloop

	cmp edx, 0
	je .edx_0

	dec edx
	jmp short .neenee
	
	.edx_0:

	mov edx, ebx
	and dl, 0x0f
	inc esi

	.neenee:

	xor eax, eax
	mov ax, [esi]
	push ecx

	xor ecx, ecx
	mov cl, bl
	and cl, 0x70
	shr ecx, 4

	sar ax, cl

	pop ecx
	stosw

	loop .noiseloop

	pop edx
	pop esi
	
	ret

	.long:
	pusha
	;; pitkää vokaalii
	mov ecx, 50
	
	.seriesloop:
	mov [fputemp], ecx
	fild dword [fputemp]
	fstp qword [ecx*8 + series]

	loop .seriesloop

	;; testaa resoo
